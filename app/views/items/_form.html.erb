
<!-- item is a parameter -->

<% puts "Given model is : #{list_item.inspect}"%>

<%= form_with(model: list_item, url:list_items_path, local: true) do |form| %>

  <% if list_item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(list_item.errors.count, "error") %> prohibited this list item from being saved:</h2>

      <ul>
      <% list_item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :list_id, id: :item_list %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :item_name %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, id: :item_email %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

<% end %>
